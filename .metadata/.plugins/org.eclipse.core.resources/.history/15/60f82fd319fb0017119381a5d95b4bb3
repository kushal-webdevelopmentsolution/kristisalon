'use strict';

app.controller('uploadController', function($scope, $rootScope, salonService, $timeout){
	
	$rootScope.enableSlider=false;
	$rootScope.enableFooter=false;
	$scope.image = {
			"name":null,
			"imgurl":null,
			"imgGroup":"Slider",
			"imgOrder":"1",
			"active":"true"
	}
	var maxOrder = 100;
	var orders = [];
	for(var i=1; i<=100; i++){
		orders.push(i);
	}
	$scope.orders = orders;
	
	$scope.uploadFile = function(file,image){
		image.imgurl += file.name;
		var fd = new FormData();
		fd.append('file', file);
		var upload =  salonService.upload(fd);
		salonService.createImage(image).$promise.then(function(){
			$scope.image = {
					"name":null,
					"imgurl":null,
					"imgGroup":"Slider",
					"imgOrder":"1",
					"active":"true"
			}
		});
	}
	
})